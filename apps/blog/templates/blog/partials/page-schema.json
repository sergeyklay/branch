{% load static %}
{
    "@context": "http://schema.org/",
    "@type": "Article",
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ BASE_URL }}{{ page.get_absolute_url }}"
    },
    "headline": "{{ page_title }}",
    "description": "{{ page_description }}",
    "image": "{% if featured_image %}{{ featured_image.url }}{% else%}{% static 'img/blog-logo.jpg' %}{% endif %}",
    "datePublished": "{{ page.published_at|date:'Y-m-d\\TH:i:sO' }}",
    "dateModified": "{{ page.updated_at|date:'Y-m-d\\TH:i:sO' }}",
    "author": {
        "@type": "Person",
        "name": "{# TODO: Use full name #}{{ page.author }}",
        "url": "{# TODO: Create about.html #}{{ BASE_URL }}/about.html"
    },
    "publisher": {
        "@type": "Organization",
        "name": "{{ page.author.get_full_name }}",
        "logo": {
            "@type": "ImageObject",
            "url": "{% static 'img/blog-logo.jpg' %}"
        }
    }
}

